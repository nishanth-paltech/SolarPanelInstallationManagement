@model SolarPanelInstallationManagement.Models.Entities.ConsumerSurvey

@{
    ViewData["Title"] = "Edit Consumer Survey";
}

<div class="container mt-4">
    <h3>Edit Consumer Survey</h3>

    <form asp-action="Edit" method="post" class="mt-3">
        <input type="hidden" asp-for="Sno" />

        <partial name="_ConsumerSurveyForm" model="Model" />

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
